            }
        },
        {
            "name": "MinSizeRel",
            "inherits": "firmware",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "gtest",
            "inherits": "test"
        }
