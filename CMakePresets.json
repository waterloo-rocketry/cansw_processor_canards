{
    "version": 3,
    "configurePresets": [
        {
            "name": "firmware",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake",
            "cacheVariables": {}
        },
        {
            "name": "test",
            "hidden": true,
            "generator": "Ninja",
